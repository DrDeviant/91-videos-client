<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/bottom_sheet_menu_grid_icon_size"
        android:layout_height="@dimen/bottom_sheet_menu_grid_icon_size"
        android:layout_marginTop="@dimen/bottom_sheet_menu_dialog_padding"
        android:layout_marginBottom="@dimen/bottom_sheet_menu_dialog_padding"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/title"
        tools:src="@android:drawable/ic_menu_share" />

    <TextView
        android:id="@+id/title"
        style="@style/BottomSheetMenu.GridItem"
        android:textAppearance="@style/BottomSheetMenu.GridItem.TextAppearance.Light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/icon"
        tools:text="List Item" />

</androidx.constraintlayout.widget.ConstraintLayout>